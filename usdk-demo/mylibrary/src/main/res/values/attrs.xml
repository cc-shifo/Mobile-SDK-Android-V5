<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="uxsdk_onStateChange" format="reference" />

    <declare-styleable name="SystemStatusWidget" tools:ignore="ResourceName">
        <attr name="uxsdk_systemStatusMessageTextAppearance" format="reference" />
        <attr name="uxsdk_systemStatusMessageTextSize" format="dimension" />
        <attr name="uxsdk_systemStatusMessageErrorTextColor" format="color" />
        <attr name="uxsdk_systemStatusMessageWarningTextColor" format="color" />
        <attr name="uxsdk_systemStatusMessageGoodTextColor" format="color" />
        <attr name="uxsdk_systemStatusMessageOfflineTextColor" format="color" />
        <attr name="uxsdk_systemStatusErrorBackgroundDrawable" format="reference" />
        <attr name="uxsdk_systemStatusWarningBackgroundDrawable" format="reference" />
        <attr name="uxsdk_systemStatusGoodBackgroundDrawable" format="reference" />
        <attr name="uxsdk_systemStatusOfflineBackgroundDrawable" format="reference" />
        <attr name="uxsdk_defaultMode" format="enum">
            <enum name="color" value="0" />
            <enum name="gradient" value="1" />
        </attr>
        <!-- Insert ID of the spotlight widget that needs to react to a state change on this widget.
        See {@link dji.v5.ux.core.widget.systemstatus.SystemStatusWidget.setStateChangeCallback}
        and {@link dji.ux.beta.core.panelwidget.systemstatus.SystemStatusListPanelWidget}. -->
        <attr name="uxsdk_onStateChange" />
    </declare-styleable>


    <declare-styleable name="FlightModeWidget" tools:ignore="ResourceName">
        <attr name="uxsdk_textAppearance" format="reference" />
        <attr name="uxsdk_textBackground" format="reference" />
        <attr name="uxsdk_textSize" format="dimension" />
        <attr name="uxsdk_icon" format="reference" />
        <attr name="uxsdk_iconDimensionRatio" format="string|reference" />
        <attr name="uxsdk_iconBackground" format="reference"/>
        <attr name="uxsdk_connectedStateIconColor" format="color"/>
        <attr name="uxsdk_disconnectedStateIconColor" format="color"/>
        <attr name="uxsdk_connectedStateTextColor" format="color" />
        <attr name="uxsdk_disconnectedStateTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RemoteControllerSignalWidget" tools:ignore="ResourceName">
        <attr name="uxsdk_rcIcon" format="reference" />
        <attr name="uxsdk_rcSignalIcon" format="reference" />
        <attr name="uxsdk_rcConnectedStateIconColor" format="color" />
        <attr name="uxsdk_rcDisconnectedStateIconColor" format="color" />
    </declare-styleable>

    <declare-styleable name="VideoSignalWidget" tools:ignore="ResourceName">
        <attr name="uxsdk_videoIcon" format="reference" />
        <attr name="uxsdk_videoSignalIcon" format="reference" />
        <attr name="uxsdk_frequencyBandTextAppearance" format="reference" />
        <attr name="uxsdk_frequencyBandTextSize" format="dimension" />
        <attr name="uxsdk_frequencyBandTextColor" format="color" />
        <attr name="uxsdk_frequencyBandBackgroundDrawable" format="reference" />
        <attr name="uxsdk_videoConnectedStateIconColor" format="color"/>
        <attr name="uxsdk_videoDisconnectedStateIconColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="StrokeTextView" tools:ignore="ResourceName">
        <attr name="uxsdk_textStrokeWidth" format="dimension" />
        <attr name="uxsdk_textStrokeColor" format="color" />
    </declare-styleable>

    <declare-styleable name="UXRecyclerView" tools:ignore="ResourceName">
        <attr name="uxsdk_fadingEdgeColor" format="color" />
    </declare-styleable>
</resources>